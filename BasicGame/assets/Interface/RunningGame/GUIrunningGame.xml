<?xml version="1.0" encoding="UTF-8"?>
<nifty>
 
  <screen id="start" controller="mygame.States.Scenario.GUIPlayer" >
    <layer id="background" backgroundColor="#0000">
      <!-- ... -->
    </layer>
    <layer id="foreground" backgroundColor="#0000" childLayout="center" >
      <panel id="panelInfo" height="15%" width="100%" valign="bottom" align="center"  childLayout="Horizontal"
             backgroundColor="#00f8">  
        <panel id="panelMunicion" height="100%" width="50%" valign="center" childLayout="center" 
             backgroundColor="#44f8">  
            
                <effect>
                  <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                  <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
                  <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
                </effect>
                <text id="municion" font="aurulent-sans-16.fnt" color="#000f" text="Salir" align="center" valign="center" />
        </panel>
        <panel id="panelVida" height="100%" width="50%" valign="center" childLayout="center"
             backgroundColor="#88f8">  
            
                <effect>
                  <onStartScreen name="move" mode="in" direction="top" length="300" startDelay="0" inherit="true"/>
                  <onEndScreen name="move" mode="out" direction="bottom" length="300" startDelay="0" inherit="true"/>
                  <onHover name="pulsate" scaleFactor="0.008" startColor="#f600" endColor="#ffff" post="true"/>
                </effect>
                <text id="vida"  font="aurulent-sans-16.fnt" color="#000f" text="Vida: 100%" align="center" valign="center" />
            
        </panel>
      </panel>
    </layer>
  </screen>
  
  
  
  

  <screen id="end">
   
  </screen>

    
</nifty>

    